<% if past_interlibrary_loans.count == 0 %>

<%= erb :empty_state %>

<% elsif %>

<div class="responsive-table">
<table>
  <caption>
    <div class="caption-flex">
      <p>Showing <span class="strong"><%= past_interlibrary_loans.pagination.first %></span> - <span class="strong"><%= past_interlibrary_loans.pagination.last %></span> of <span class="strong"><%= past_interlibrary_loans.count %></span> <%= past_interlibrary_loans.item_text %></p>
    </div>
  </caption>
  <thead>
    <tr>
      <th scope="col">Title &amp; author</th>
      <th scope="col">Requested</th>
      <th scope="col">Returned</th>
    </tr>
  </thead>
  <tbody>
    <% past_interlibrary_loans.each do |past_interlibrary_loan| %>
      <tr>
        <td>
          <%= erb :'components/title_author', locals: {item: past_interlibrary_loan} %>
        </td>
        <td>
          <span aria-hidden="true">Requested:</span>
          <%= past_interlibrary_loan.creation_date %>
        </td>
        <td>
          <span aria-hidden="true">Returned:</span>
          <%= past_interlibrary_loan.transaction_date %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= erb :'components/pagination', locals: {pagination: past_interlibrary_loans.pagination, count: past_interlibrary_loans.count} %>

<% end %>
