<% if past_document_delivery.count == 0 %>

<%= erb :empty_state %>

<% elsif %>

<div class="responsive-table">
<table>
  <caption>
    <div class="caption-flex">
      <p>Showing <span class="strong"><%= past_document_delivery.pagination.first %></span> - <span class="strong"><%= past_document_delivery.pagination.last %></span> of <span class="strong"><%= past_document_delivery.count %></span> <%= past_document_delivery.item_text %></p>
    </div>
  </caption>
  <thead>
    <tr>
      <th>Title &amp; author</th>
      <th>Requested</th>
      <th>Returned</th>
    </tr>
  </thead>
  <tbody>
    <% past_document_delivery.each do |past_delivery| %>
      <tr>
        <td>
          <%= erb :'components/title_author', locals: {item: past_delivery} %>
        </td>
        <td>
          <span aria-hidden="true">Requested:</span>
          <%= past_delivery.creation_date %>
        </td>
        <td>
          <span aria-hidden="true">Returned:</span>
          <%= past_delivery.transaction_date %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= erb :'components/pagination', locals: {pagination: past_document_delivery.pagination, count: past_document_delivery.count} %>

<% end %>
