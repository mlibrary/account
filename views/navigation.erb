<% pages = [
  {
    label: 'Account overview',
    to: '/',
  },
  {
    label: 'Shelf',
    to: '/shelf/loans',
    match: [ # Can we match the route to one of these to signal it is active?
      '/shelf',
      '/past-loans',
      '/document-delivery'
    ]
  },
  {
    label: 'Requests',
    to: '/requests'
  },
  {
    label: 'Fines & fees',
    to: '/fines'
  },
  {
    label: 'Contact information',
    to: '/contact-information'
  }
] %>

<nav class="site-navigation site-layout__left">
  <div class="sticky-top">
    <ul class="site-navigation-list">
      <% pages.each do |page| %>
        <li class="<%= page[:to] == request.path_info ? 'active': '' %>">
          <a href="<%=page[:to]%>">
            <%=page[:label]%>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
