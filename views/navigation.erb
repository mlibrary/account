<% my_pages = Navigation::Sidebar.for(request.path_info) %>

<nav class="site-navigation site-layout__left">
  <div class="sticky-top">
    <ul class="site-navigation-list">
      <% my_pages.pages.each do |page| %>
        <li class="<%= page.active %>">
          <a href="<%=page.path%>" <% if page.active? %>aria-current="page"<% end %>>
            <m-icon name="<%=page.icon_name%>"></m-icon>
            <span><%=page.title%></span>
            <% if page.title == 'Fines and Fees' %>
              <span class="badge badge--caution">3</span>
            <% end %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
