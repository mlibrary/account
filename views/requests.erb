<%= erb :horizontal_nav %>

<div class="table-container">
<table>
  <thead>
    <tr>
      <th>Title & author</th>

      <th>Pickup location</th>
      <th>Request date</th>
    </tr>
  </thead>
  <tbody>
    <% requests.each do |request| %>
      <tr>
        <td>
          <a href="<%=request.search_url%>"><%= request.title %></a>
          <span>&#183; <%= request.author %></span>
        </td>
        <td style="min-width: 20%;">
          <%= request.pickup_location %>
        </td>
        <td style="min-width: 20%;">
          <%= request.request_date %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
